<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:weightSum="9"
    android:background="@drawable/background_bg"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ToolBar">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/backButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="0dp"
                    android:background="#00FFFFFF"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_arrow_back"
                    android:tint="@color/white" />

                <LinearLayout
                    android:layout_width="321dp"
                    android:layout_height="73dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/welcomeTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="12dp"
                        android:text="Welcome back, user !"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/userTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/emailTextView"
                        android:layout_marginStart="16dp"
                        android:text="Employee Profile"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/welcomeTextView" />
                </LinearLayout>

                <ImageButton
                    android:id="@+id/backButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="0dp"
                    android:layout_marginTop="0dp"
                    android:layout_gravity="center"
                    android:background="#00FFFFFF"
                    android:src="@drawable/baseline_menu_24"
                    android:tint="@color/white" />

            </LinearLayout>


        </androidx.appcompat.widget.Toolbar>
    </LinearLayout>


    <ScrollView
        android:id="@+id/dashboardLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:background="@drawable/recyclerview_bg"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/popularityLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/popularityText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="User Popularity"
                android:textSize="15sp"
                android:textStyle="bold" />

            <RatingBar
                android:id="@+id/userRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:numStars="5"
                android:rating="4.5"
                android:stepSize="0.5" />
        </LinearLayout>

        <Button
            android:id="@+id/availableJobsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/lightBlue"
            android:gravity="left|center_vertical"
            android:text="Available Jobs Near You:"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/popularityLayout"/>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/availableJobRecyclerView"
            android:layout_width="388dp"
            android:layout_height="130dp"
            android:layout_marginStart="3dp"
            android:layout_marginTop="3dp"
            android:orientation="horizontal" />

        <Button
            android:id="@+id/appliedJobsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/lightBlue"
            android:gravity="left|center_vertical"
            android:text="Applied Jobs:"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/popularityLayout"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/appliedJobRecyclerView"
            android:layout_width="388dp"
            android:layout_height="108dp"
            android:layout_marginStart="3dp"
            android:layout_marginTop="3dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/appliedJobsButton" />

        <Button
            android:id="@+id/acceptedJobsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/lightBlue"
            android:gravity="left|center_vertical"
            android:text="Accepted Jobs:"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/popularityLayout"/>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/acceptedJobsRecyclerView"
            android:layout_width="388dp"
            android:layout_height="108dp"
            android:layout_marginStart="3dp"
            android:layout_marginTop="3dp"
            android:orientation="horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/incomeHistory">

            <TextView
                android:id="@+id/overallIncomeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Overall Income:"
                android:textSize="15sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/incomeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="$500"
                android:textSize="15sp" />

            <Button
                android:id="@+id/incomeHistoryButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/lightBlue"
                android:gravity="left|center_vertical"
                android:text="Income History:"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@id/overallIncomeTextView"/>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/incomeGraphsRecyclerView"
                android:layout_width="388dp"
                android:layout_height="108dp"
                android:layout_marginStart="3dp"
                android:layout_marginTop="3dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/incomeHistoryButton" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>