<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rLayout"
    tools:context=".EmployerActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="561dp"
        android:layout_height="70dp"
        android:background="#051877"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </LinearLayout>

    <Button
        android:id="@+id/switch2EmployeeButton"
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/orange"
        android:text="Switch Role to Employee"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.39"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logout" />

    <Button
        android:id="@+id/myProfileButton"
        android:layout_width="170dp"
        android:layout_height="150dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/lightBlue"
        android:text="My Profile"
        android:textSize="18sp"
        app:cornerRadius="30dp"
        app:layout_constraintEnd_toStartOf="@+id/employerReport"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/employerAcceptedApplications" />

    <TextView
        android:id="@+id/displayNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="Email"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/employerTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/displayNameTextView"
        android:layout_marginStart="16dp"
        android:text="Employer Profile"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/displayNameTextView" />

    <Button
        android:id="@+id/employerAcceptedApplications"
        android:layout_width="170dp"
        android:layout_height="150dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/lightBlue"
        android:text="Accepted Applications"
        android:textSize="18sp"
        app:cornerRadius="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/employerPreferredEmployees"
        app:layout_constraintTop_toBottomOf="@+id/employerViewJobs" />

    <Button
        android:id="@+id/employerReport"
        android:layout_width="170dp"
        android:layout_height="150dp"
        android:layout_marginStart="204dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/lightBlue"
        android:text="Report "
        android:textSize="18sp"
        app:cornerRadius="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/employerAcceptedApplications" />

    <Button
        android:id="@+id/employerAddJob"
        android:layout_width="170dp"
        android:layout_height="150dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/lightBlue"
        android:text="Add Job Posting"
        android:textSize="18sp"
        app:cornerRadius="30dp"
        app:layout_constraintEnd_toStartOf="@+id/employerViewJobs"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switch2EmployeeButton" />

    <Button
        android:id="@+id/employerPreferredEmployees"
        android:layout_width="170dp"
        android:layout_height="150dp"
        android:layout_marginTop="30dp"
        android:text="View Preferred Employees"
        android:backgroundTint="@color/lightBlue"
        android:textSize="18sp"
        app:cornerRadius="30dp"
        app:layout_constraintEnd_toStartOf="@+id/employerAcceptedApplications"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/employerAddJob" />

    <Button
        android:id="@+id/employerViewJobs"
        android:layout_width="170dp"
        android:layout_height="150dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/lightBlue"
        android:text="View Job Postings"
        android:textSize="18sp"
        app:cornerRadius="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/employerAddJob"
        app:layout_constraintTop_toBottomOf="@+id/switch2EmployeeButton" />

    <Button
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="147dp"
        android:layout_marginEnd="171dp"
        android:text="Logout"
        app:layout_constraintBaseline_toBottomOf="parent"
        app:layout_constraintBaseline_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/switch2EmployeeButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.343" />

    <Button
        android:id="@+id/paymentButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="16dp"
        android:text="Go to Payments"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/employerRatingsButton"
        android:layout_width="170dp"
        android:layout_height="150dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/lightBlue"
        android:text="Employee Ratings"
        android:textSize="18sp"
        app:cornerRadius="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>